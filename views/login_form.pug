extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='username') Email: 
      input#email(type='email', placeholder='example@email.com' name='username', required='true')
      label(for='password') password: 
      input#password(type='password' name='password', required='true' minLength=6 maxLength=30)
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg