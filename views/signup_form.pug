extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='firstName') First name:
      input#firstName(type='text', placeholder='first name' name='firstName' required='true', maxLength=30, minLength=1)
      label(for='lastName') Last name: 
      input#lastName(type='text', placeholder='last name' name='lastName', required='true', maxLength=30, minLength=1)
      label(for='email') Email: 
      input#email(type='email', placeholder='example@email.com' name='email', required='true')
      label(for='password') password: 
      input#password(type='password' name='password', required='true' minLength=6 maxLength=30)
      label(for='passwordVerify') re-enter password: 
      input#passwordVerify(type='password' name='passwordVerify', required='true' minLength=6 maxLength=30)
      label(for='isAdmin') Administrator?
      input#isAdmin(type='checkbox', name='isAdmin')
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg